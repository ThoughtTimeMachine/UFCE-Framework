{
    "name": "Python 3.14 The UniField Coupling Equation (UCE) for Modeling Coupled Spatial-Temporal Dynamics",
    // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
    "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bookworm",  // or bookworm
    
       // Features to add to the dev container (none needed for your packages)
    // "features": {},

    // Ports to forward (e.g., if you later add Jupyter)
    // "forwardPorts": [8888],

    // Runs after the container is created â€” installs your dependencies automatically
    "postCreateCommand": "pip install -r requirements.txt --require-hashes",

    // Customize VS Code inside the container
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",          // Core Python extension
                "ms-python.vscode-pylance",  // Fast type checking & IntelliSense
                "ms-python.black-formatter", // Optional: auto-formatting with Black
                "ms-python.isort"            // Optional: import sorting
            ]
        }
    },

     //Run as non-root user (default and recommended for security)
     "remoteUser": "vscode"
}
